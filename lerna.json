{
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    },
    "publish": {
      "allowBranch": ["master", "main", "dev"],
      "conventionalCommits": true,
      "exact": true
    }
  }
}
