{
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    },
    "publish": {
      "allowBranch": [
        "master",
        "dev"
      ],
      "conventionalCommits": true,
      "exact": true
    }
  }
}